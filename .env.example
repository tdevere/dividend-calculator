# Environment variables for different deployment environments

# Development
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3001
NODE_ENV=development

# Production (Azure App Service)
# NEXT_PUBLIC_APP_ENV=production
# NEXT_PUBLIC_API_URL=https://your-app-name.azurewebsites.net
# NODE_ENV=production

# Application Settings
NEXT_PUBLIC_APP_NAME=Dividend Calculator
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_CONTACT_EMAIL=support@dividendcalculator.com

# Analytics (optional)
# NEXT_PUBLIC_GA_TRACKING_ID=your-google-analytics-id
# NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id

# Feature Flags
NEXT_PUBLIC_ENABLE_EXPORT=true
NEXT_PUBLIC_ENABLE_ADVANCED_CHARTS=true
NEXT_PUBLIC_ENABLE_PORTFOLIO_SHARING=false

# Security
# SESSION_SECRET=your-session-secret-here
# NEXTAUTH_SECRET=your-nextauth-secret-here
# NEXTAUTH_URL=https://your-app-name.azurewebsites.net

# Azure specific (set in Azure portal)
# WEBSITE_NODE_DEFAULT_VERSION=~20
# SCM_DO_BUILD_DURING_DEPLOYMENT=true
# ENABLE_ORYX_BUILD=true
